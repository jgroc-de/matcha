{% extends "layout.html.twig" %}

{% block head %}
<link rel="stylesheet" href="/css/home.css" type="text/css"/>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
{% endblock %}

{% block header %}
    <a href='{{ path_for('home') }}'><h1>Match a Rick&Morty</h1></a>
{% endblock %}

{% block navbar %}
    <div class="w3-bar w3-theme-d1">
        {% set class = "w3-bar-item w3-button w3-large" %}
        {% set classR = "w3-bar-item w3-button w3-right w3-large" %}
        <!--<a href="#" class="{{ class }}"><i class="fa fa-bars" alt="menu" title="menu"></i></a>-->
        <a href={{ path_for('home') }} class="{{ class }}">
            <i class="fa fa-home" alt="home" title="your profil"></i>
        </a>
        <a href="{{ path_for('search') }}" class="{{ class }}">
            <i class="fa fa-search" alt="search" title="new search"></i>
        </a>
        <a href="#" class="{{ class }}">
            <i class="fa fa-send" alt="messages" title="new messages"></i>
        </a>
        <a href="#" class="{{ class }}">
            <i class="fa fa-feed" alt="like" title="new likes"></i>
        </a>
        <a href="{{ path_for('logout') }}" class="{{ classR }}">
            <i class="fa fa-power-off" alt="logout" title="logout"></i>
        </a>
        <div class="w3-dropdown-hover w3-right w3-large">
            <a href="#" class="w3-button w3">
                <i class="fa fa-gears" alt="edit profile" title="edit profile"></i>
            </a>
            <div class="w3-dropdown-content w3-bar-block" style="right:47px">
                <a href="{{ path_for('editProfil') }}" class="w3-bar-item w3-button">profil</a>
                <a href="{{ path_for('editPassword') }}" class="w3-bar-item w3-button">password</a>
            </div>
        </div>
        <div class="w3-right w3-theme-l5 w3-border w3-round" style="width:100px;margin:10px" title="popularity: {{ me.popularity }}/100">
            <div class="w3-round w3-green w3-border" style="width:{{ me.popularity }}%;height:16px"></div>
        </div>
    </div>
{% endblock %}

{% block script %}
    <script src="js/displayForm.js"></script>
{% endblock %}
