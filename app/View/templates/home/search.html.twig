{% extends 'templates/home.html.twig' %}
{% from 'macro/form/button.html.twig' import button %}
{% from 'macro/form/input.html.twig' import input %}
{% from 'macro/form/select.html.twig' import select %}


{% block main %}
<div class="w3-content w3-section w3-card-4 w3-theme-l5" style="max-width:95vw;min-height:80vh"> 
    <div class="w3-padding w3-row">
    <h2 class='w3-theme-l1'>Search</h2>
    <div class="w3-row w3-col l8">
        <div class="w3-row w3-col s12">
        <h3 class="w3-hover-green" style="cursor:pointer" onclick="toggleDisplay2(this)">Try them</h3>
        {{ select({
        'label': 'sort by',
        'name': 'sort1',
        'array': sort,
        'select': '',
        'style': 'width:auto;max-width:75%',
        'class': '',
        'change': 'sortCard("sort1", "try")'
        }) }}
        <div id="try" class="w3-col s12 w3-row">
        </div>
        </div>
        <div class="w3-twothird">
            <h3 class="w3-hover-green" style="cursor:pointer" onclick="toggleDisplay('map')">Map</h3>
            <div id="map" class="gg-map-med w3-hide"></div>
        </div>
        <div class="w3-third">
            <div class="w3-row w3-col s12">
            <h3 class="w3-hover-green" style="cursor:pointer" onclick="toggleDisplay2(this)">Focus</h3>
            {{ select({
            'label': 'sort by',
            'name': 'sort2',
            'array': sort,
            'select': '',
            'style': 'width:auto;max-width:75%',
            'class': '',
            'change': 'sortCard("sort2", "focus")'
            }) }}
            <div id="focus">
            </div>
            </div>
        </div>
    </div>
    <form action="{{ path_for('searchByName') }}" method="post" class="w3-col l4">
        <h3 class="w3-hover-green" style="cursor:pointer" onclick="toggleDisplay('sbyname')">Search By Name</h3>
        <fieldset id="sbyname" class="w3-row w3-section w3-hide">
            <legend>Search by Name</legend>
            {{ input('text', '', {'value': '','placeholder':'pseudo', 'class':'w3-section w3-col s12 m9 l6', 'name': 'pseudo'}) }}
        {{ button('submit', 'search') }}
        </fieldset>
    </form>
    <form action="{{ path_for('searchByCriteria') }}" method="post" class="w3-col l4">
        <h3 class="w3-hover-green" style="cursor:pointer" onclick="toggleDisplay('sbyc')">Search by Criteria</h3>
        <fieldset id="sbyc" class="w3-row">
            <legend>Search by Criteria</legend>
            <div class="w3-row w3-margin-bottom">
            <div class="w3-third">
                <h3 class="w3-theme-l1">age</h3>
                <div class="w3-col s6">
            {{ input(
            'number',
            'min',
            {
            'value': age.min,
            'min': 18,
            'max': 118,
            'name': 'min',
            'style': 'width:90%'
            })
            }}
                </div>
                <div class="w3-col s6">
            {{ input(
            'number',
            'max',
            {
            'value': age.max,
            'min': 18,
            'max': 118,
            'name': 'max',
            'style': 'width:90%'
            })
            }}
                </div>
            </div>
            <div class="w3-third" style="text-align:center">
                <h3 class="w3-theme-l1">distance</h3>
            {{ select({
            'label': 'up to â€¦ km',
            'name': 'distance',
            'array': distance,
            'select': distSel,
            'style': 'width:85%;'
            })
            }}
            </div>
            <div class="w3-third" style="text-align:center">
                <h3 class="w3-theme-l1">popularity</h3>
                <div class="w3-col s6">
            {{ input(
            'number',
            'min',
            {
            'value': popularity.min,
            'min': 0,
            'max': 100,
            'name': 'Pmin',
            'style': 'width:90%'
            })
            }}
                </div>
                <div class="w3-col s6">
            {{ input(
            'number',
            'max',
            {
            'value': popularity.max,
            'min': 0,
            'max': 100,
            'name': 'Pmax',
            'style': 'width:90%'
            })
            }}
                </div>
            </div>
            </div>
            <div class="w3-row">
            <div class="w3-half">
                <h3 class="w3-theme-l1">kind</h3>
                {% for char in gender %}
                <div>
                    <input name="{{ char }}" type="checkbox" value="" {% if char in target %}checked{% endif %}>
                    <label>{{ char }}</label>
                </div>
                {% endfor %}
            </div>
            <div class="w3-half">
                <h3 class="w3-theme-l1">interest</h3>
                <div style="max-height:122px;overflow:auto">
                {% for tag in tags %}
                <div>
                    <input name="{{ tag }}" value="{{ tag }}" type="checkbox">
                    <label>{{ tag }}</label>
                </div>
                {% endfor %}
                </div>
            </div>
            </div>
        {{ button('submit', 'search') }}
        </fieldset>
    </form>
{% endblock %}

{% block script %}
<script>
var myPos = {lat: {{ me.lattitude }}, lng: {{ me.longitude }}};
var usersPos = [
{% for user in users %}
{score: {{ user.score }}, lat: {{ user.lattitude }}, lng: {{ user.longitude }}, title: '{{ user.pseudo }}', img: '{{ user.img1 }}', id: '{{ user.id }}', kind: '{{ user.gender }}', age: '{{ 2018 - user.birthdate }}', popularity: '{{ user.popularity }}', biography: '{{ user.biography }}', distance: '{{ user.distance }}', tag: '{{ user.tag }}' },
{% endfor %}
];
var myId = '{{ me.publicToken }}';

</script>
<!--<script src="googleMap/markerclusterer/src/markerclusterer.js"></script>-->
<script src="js/search.js"></script>
<script src="js/autobahn.js"></script>
<script src="js/displayForm.js"></script>
<script src="js/notification.js"></script>
<script src="js/mapSearch.js"></script>
<script defer async src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCX5TOwSdL7R_-0S6h8-vQ7qz_tiebuwPg&callback=initMap"></script>
    </div>
</div>
{% endblock %} 
