{% extends 'templates/home.html.twig' %}
{% from 'macro/form/button.html.twig' import button %}
{% from 'macro/form/input.html.twig' import input %}
{% from 'macro/form/select.html.twig' import select %}


{% block main %}
<div class="w3-content"> 
    <div class="w3-theme-l5 w3-padding-large w3-margin w3-round-large">
    <h2 class='w3-theme-l1'>Search</h2>
    <form action="{{ path_for('searchByCriteria') }}" method="post">
        <fieldset class="w3-row">
            <legend>Search by Criteria</legend>
            <div class="w3-quarter">
                <h3>age</h3>
            {{ input(
            'number',
            'min',
            {
            'value': age.min,
            'min': 18,
            'max': 118,
            'name': 'min'
            })
            }}
            {{ input(
            'number',
            'max',
            {
            'value': age.max,
            'min': 18,
            'max': 118,
            'name': 'max'
            })
            }}
            </div>
            <div class="w3-quarter">
                <h3>kind</h3>
                <select name="gender" size="5" style="width:100%">
                    {% for char in target %}
                    <option value="{{ char }}">{{ char }}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="w3-quarter">
                <h3>distance</h3>
            {{ select({
            'label': '< (km)',
            'name': 'distance',
            'array': distance,
            'select': distSel,
            })
            }}
            </div>
            <div class="w3-quarter">
                <h3>interest</h3>
                <select name="tags" size="5" style="width:100%">
                    {% for tag in tags %}
                        <option value="{{ tag }}">{{ tag }}</option>
                    {% endfor %}
                </select>
                <div id="" class=""></div>
            </div>
        </fieldset>
        </fieldset>
        {{ button('submit', 'search') }}
    </form>
    <form action="{{ path_for('searchByName') }}" method="post">
        <fieldset class="w3-row">
            <legend>Search by Name</legend>
            {{ input('text', 'pseudo', {'value': ''}) }}
        </fieldset>
        {{ button('submit', 'search') }}
    </form>
    <div class="w3-row">
        <div class="w3-third">
            <h3>Focus</h3>
            {% for user in users %}
            <div class="hide" id="{{ user.id }}">
                <div class="w3-theme-l4" style="height:100px;overflow:auto">
                    <div class="w3-theme-l1" style="width:100%;height:31px;position:sticky;top:0">
                        <a href="{{ path_for('profil', user) }}">
                            <h4 class="w3-margin-left w3-left w3-theme-l1">{{ user.pseudo }}: {{ user.gender }}, {{ 2018 - user.birthdate }}</h4>
                        </a>
                        <i class="w3-button w3-right fa fa-remove w3-hover-red" onclick="closeInfo({{ user.id }})"></i>
                    </div>
                        <img src="{{ user.img1 }}" class="w3-right" style="width:50%">
                        <p class="w3-small">{{ user.biography }}</p>
                </div>
            </div>
            {% endfor %}
        </div>
        <div class="w3-rest">
            <h3>Map</h3>
            <div id="map" class="gg-map-med"></div>
        </div>
    </div>
{% endblock %}

{% block script %}
    <script>
var myPos = {lat: {{ me.lattitude }}, lng: {{ me.longitude }}};
var usersPos = [
{% for user in users %}
    {lat: {{ user.lattitude }}, lng: {{ user.longitude }}, title: '{{ user.pseudo }}', img: '{{ user.img1 }}', id: '{{ user.id }}', kind: '{{ user.gender }}'},
{% endfor %}
];

function closeInfo(id) {
    document.getElementById('' + id).style.display = "none";
}
</script>
