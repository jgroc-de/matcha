    {{ input('password') }}
</div>
<div class="w3-section">
    {{ input('email', 'email', {'value': post.email }) }}
</div>
<div class="w3-section">
    {{ select({'label': 'you are a', 'name': 'gender', 'array': characters, 'select': post.gender}) }}
