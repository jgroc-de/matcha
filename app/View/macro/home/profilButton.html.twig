{% macro profilButton(color, key, function, home, href, type) %}
{% if home %}
    {% set classP = "w3-padding w3-hover-green w3-col s8" %}
{% else %}
    {% set classP = "w3-padding w3-hover-green w3-col s12" %}
{% endif %}
<div class="w3-bar w3-round-xxlarge w3-half w3-row" id="{{ type }}{{ key.id }}">
{% if href %}
    <a href="{{ href }}" class="{{ classP }}" style="height:40px;overflow:auto;background-color: {{ color[key.gender] }};">{{ key.pseudo }}</a>
{% else %}
<span class="{{ classP }} w3-theme-l1" style="height:40px;overflow:auto">#{{ key.tag }}</span>
{% endif %}
{% if home %}
        <i class="w3-button w3-theme-d1 w3-right gg-button w3-hover-red w3-col s4 fa fa-remove" onclick="{{ function }}" title="remove" style="height:40px">
    </i>
{% endif %}
</div>
{% endmacro %}
