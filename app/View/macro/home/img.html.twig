{% macro myImg(profil) %}
{% for key, url in profil %}
    {% if key starts with 'img' %}
        {% if key == 'img1' %}
        <div class="w3-half" id="{{ key }}">
            <div class="w3-display-container gg-main-image">
            {% if url %}
                <img src='{{ url }}' alt='{{ url }}' title='{{ profil.pseudo }}_{{ key }}' class="w3-image w3-display-middle" style="max-height:100%" onclick="displayModal('{{ url }}')">
                <i class="w3-button w3-display-topright w3-hover-red fa fa-remove" title="remove picture" onclick="deletePic('{{ key }}')"></i>
            {% else %}
            <label class="w3-button w3-display-middle w3-block w3-jumbo fa fa-plus w3-padding-large w3-hover-green" onchange='addPicture()' title="add picture">
                <input id="{{ key }}" type="file" style="display:none"/>
            </label>
            {% endif %}
            </div>
        </div>
        <div class="w3-half">
        {% else %}
            {% if key == 'img2' or key == 'img4' %}
            <div class="w3-row gg-2nd-image">
            {% endif %}
            <div class="w3-half" id="{{ key }}">
                <div class="w3-display-container" style="height:125px">
            {% if url %}
                <img src='{{ url }}' alt='{{ profil.pseudo }}' title='{{ profil.pseudo }}_{{ key }}' class="w3-image w3-display-middle" style="max-height:100%" onclick="displayModal('{{ url }}')">
                <i class="w3-button w3-display-topright w3-hover-red fa fa-remove" title="remove picture" onclick="deletePic('{{ key }}')"></i>
            {% else %}
            <label class="w3-button w3-display-middle w3-block w3-jumbo fa fa-plus w3-padding-large w3-hover-green" onchange='addPicture()' title="add picture" style="vertical-align:middle">
                <input id="{{ key }}" type="file" style="display:none"/>
            </label>
            {% endif %}
                </div>
            </div>
            {% if key == 'img3' or key == 'img5' %}
            </div>
            {% endif %}
        {% endif %}
    {% endif %}
{% endfor %}
    </div>
{% endmacro %}

{% macro otherImg(profil) %}
<div class="w3-display-container" id="{{ key }}" style="height:255px">
    {% set i = 0 %}
{% for key, url in profil %}
    {% if key starts with 'img' and url %}
    {% set i = i + 1 %}
    <img class="mySlides w3-image w3-display-middle" alt="{{ profil.pseudo }}" src="{{ url }}" title='{{ profil.pseudo }}_{{ key }}' style="max-height:250px" onclick="displayModal('{{ url }}')">
    {% endif %}
{% endfor %}
{% if i > 1 %}
    <button class="w3-button w3-display-left" onclick="plusDivs(-1)">&#10094;</button>
    <button class="w3-button w3-display-right" onclick="plusDivs(+1)">&#10095;</button>
{% endif %}
</div>
{% endmacro %}
