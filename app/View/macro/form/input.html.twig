{% macro input(type, label, hash) %}
{% from 'macro/form/label.html.twig' import Label %}
{{ Label(label, hash.id|default(hash.id)) }}
<input class="w3-input w3-border {{ hash.class }}"
       id="{{ hash.id|default(label) }}"
       type="{{ type }}"
       name="{{ hash.name|default(label|default(type)) }}"
       {% for key, value in hash %}
           {% if key != name %}
           {{ key }}="{{ value }}"
           {% endif %}
       {% endfor %}
       {% if type == 'password' %}
           pattern="{{ hash.pattern|default('(?=.*\\d)(?=.*[a-z])(?=.*[A-Z]).{8,}') }}"
       {% endif %}
       required>
{% endmacro %}
