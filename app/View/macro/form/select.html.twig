{% macro select(name, array, id) %}
{% set def = 'select' %}
{% from 'macro/form/label.html.twig' import label %}
{{ label(name|default(def)) }}
<select name="{{ name|default(def) }}"
       id="{{ id|default(def) }}">
    {% for value in array %}
    <option value='{{ value }}'>{{ value }}</option>
    {% endfor %}
</select>
{% endmacro select %}
