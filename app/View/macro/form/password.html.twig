{% macro password(name, id, type, pattern) %}
{% set def = 'password' %}
{% from 'macro/form/label.html.twig' import label %}
{{ label(name|default(def)) }}

<input type="{{ type|default(def) }}"
       name="{{ name|default(def) }}"
       id="{{ id|default(def) }}"
       pattern="{{ pattern|default('(?=.*\\d)(?=.*[a-z])(?=.*[A-Z]).{6,}') }}"
       required>
{% endmacro password %}
