{# hash keys are: label, name, min, max #}
{% macro password(hash) %}
{% set def = 'password' %}
{% from 'macro/form/label.html.twig' import label %}
{{ label(hash.label|default(def)) }}

<input type="password"
       name="{{ hash.name|default(def) }}"
       pattern="{{ hash.pattern|default('(?=.*\\d)(?=.*[a-z])(?=.*[A-Z]).{6,}') }}"
       required>
{% endmacro password %}
