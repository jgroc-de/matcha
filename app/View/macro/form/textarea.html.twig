{# hash keys are: label, name, value, placeholder #}
{% macro textarea(hash) %}
{% set def = 'textarea' %}
{% from 'macro/form/label.html.twig' import label %}
{{ label(hash.label|default(def)) }}
<textarea
    id="{{ hash.label|default(def) }}"
    name="{{ hash.name|default(hash.label|default(def)) }}"
    class="w3-input w3-border"
    placeholder="{{ hash.placeholder|default('do something of your life, go watch TV!') }}"
    required>{{ hash.value }}</textarea>
{% endmacro %}
