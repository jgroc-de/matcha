{# hash keys are: label, name, value, size #}
{% macro text(hash) %}
{% set def = 'text' %}
{% from 'macro/form/label.html.twig' import label %}
{{ label(hash.label|default(def)) }}
<input tuype="text"
       name="{{ hash.name|default(hash.label|default(def)) }}"
       value="{{ hash.value }}"
       maxlength="{{ hash.size|default(40) }}"
       required>
{% endmacro text %}
